{
  "name": "@jason-ari/auto-release",
  "version": "1.1.3",
  "type": "module",
  "description": "Auto release tool for Node.js projects",
  "bin": {
    "update-version": "dist/update-version.js",
    "update-changelog": "dist/update-changelog.js",
    "create-tag": "dist/create-tag.js"
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "pnpm run build",
    "prepare": "husky",
    "update:version": "tsx src/update-version.ts",
    "update:changelog": "tsx src/update-changelog.ts",
    "create:tag": "tsx src/create-tag.ts"
  },
  "keywords": [
    "version",
    "changelog",
    "release"
  ],
  "author": "jasonari",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jasonari/auto-release"
  },
  "packageManager": "pnpm@10.7.0",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.32.0",
    "@types/node": "^24.1.0",
    "eslint": "^9.32.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0"
  },
  "lint-staged": {
    "**/*.{js,ts,mjs,cjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "chalk": "^5.4.1"
  }
}
